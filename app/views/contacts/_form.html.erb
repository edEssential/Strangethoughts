<section id="formBacker">
	<div class="container">
		
		<div id="cmsHeader">
			<h2 id="cmsTitle">Add/edit your contact content here</h2>
		</div>
		
		<div class="formWrapper">
			<% if @contact.errors.any? %>
				<div class="message warning">
					<% @contact.errors.full_messages.each do |msg| %>
			   			<%= msg %><br/>
					<% end %>
				</div>
			<% end %>	
			<%= form_for(@contact) do |f| %>
				<%= f.label :About_1, class: "formText" %><br/>
    			<%= f.text_field :about1, class: 'text-area' %><br /><br />
				<%= f.label :About2, class: "formText" %><br/>
	    		<%= f.text_area :about2, class: 'text-areaArea' %><br /><br />
				<%= f.label :Thanks_text, class: "formText" %><br/>
	    		<%= f.text_field :thanks, class: 'text-area' %><br /><br />
	    		<%= f.submit %>
			<% end %>
		</div>
		
	</div>
</section>