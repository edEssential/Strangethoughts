<section id="formBacker">
	<div class="container">
		
		<div id="cmsHeader">
			<h2 id="cmsTitle">Sign In</h2>
		</div>
		
		<div class="formWrapper">
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
				<%= f.label :email, class: "formText" %><br/>
    			<%= f.email_field :email, :autofocus => true, class: 'text-area' %><br /><br />
				<%= f.label :password, class: "formText" %><br/>
	    		<%= f.password_field :password, class: 'text-area' %><br /><br />
	    		<%= f.submit 'Sign In', :class => 'button2' %>
			<% end %>
		</div>
	</div>
</section>

