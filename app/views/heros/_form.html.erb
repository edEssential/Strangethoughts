<section id="formBacker">
	<div class="container">
		
		<div id="cmsHeader">
			<h2 id="cmsTitle">Add/edit your hero content here</h2>
		</div>
		
		<div class="formWrapper">
			<% if @hero.errors.any? %>
				<div class="message warning">
					<% @hero.errors.full_messages.each do |msg| %>
			   			<%= msg %><br/>
					<% end %>
				</div>
			<% end %>	
			<%= form_for(@hero) do |f| %>
				<%= f.label :Title, class: "formText" %><br/>
    			<%= f.text_area :slide_title, class: 'text-area' %><br /><br />
				<%= f.label :Description, class: "formText" %><br/>
	    		<%= f.text_area :slide_content, class: 'text-areaArea' %><br /><br />
				<%#= f.label :Image, class: "formText" %>
				<%#= f.label "(must be 1920x1080 pixels)", class: "formText2" %>
    			<%#= f.file_field :image, class: 'formImage' %>
	    		<%= f.submit %>
			<% end %>
		</div>
		
	</div>
</section>