<section id="formBacker">
	<div class="container">
		
		<div id="cmsHeader">
			<h2 id="cmsTitle">Add/edit your project's content here</h2>
		</div>
		
		<div class="formWrapper">
			<%= render 'shared/error_messages', :target => @project %>	
			<%= form_for(@project) do |f| %>
				<%= f.label :Title, class: "formText" %><br/>
    			<%= f.text_field :title, class: 'text-area' %><br /><br />
				<%= f.label :Image, class: "formText" %><br/>
				<%= f.label :Must_be_800_x_600_pixels, class: "formText" %>
    			<%= f.file_field :image, class: 'formImage' %><br /><br />
				<%= f.label :Challenge, class: "formText" %><br/>
	    		<%= f.text_area :challenge, class: 'text-areaArea' %><br /><br />
				<%= f.label :Solution, class: "formText" %><br/>
	    		<%= f.text_area :solution, class: 'text-areaArea' %><br /><br />
				<%= f.label :Result, class: "formText" %><br/>
	    		<%= f.text_area :result, class: 'text-areaArea' %><br /><br />
	    		<%= f.submit "Save Project", :class => "button3" %>
			<% end %>
		</div>
		
	</div>
</section>