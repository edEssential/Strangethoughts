<div class="cmsWrapper">
	<div class="releases">
		<div class="divHeader">About</div>
		<div class="tableWrapper">
			<div class="tableContent">
				<h2 class="tableSubHeader">Top Blocks</h2>
				<% if @abouttbsall.count > 0 %>
					<table class="individualTable" width="100%">
						<tr class="tableHeader">
							<th>TITLE</th>
							<th>DESCRIPTION</th>
						</tr>
						<tr><hr class="ruler"/></tr>
						<% @abouttbsall.each do |atb| %>
							<tr class="tableRowBig">
								<td width="15%"><%= atb.title %></td>
								<td width="80%"><%= atb.content %></td>
								<td width="5%"><%= link_to image_tag('edit2.png'), edit_abouttb_path(atb), class: "edit" %></td>
							</tr>
						<% end %>
					</table>
				<% else %>
					<table width="100%"><tr class="tableRow empty"><td><em>YOU HAVE NO TOP BLOCKS YET... ADD SOME BELOW ?!</em></td></tr></table>
				<% end %>
				<h2 class="tableSubHeader">Bottom Blocks</h2>
				<% if @aboutbbs.count > 0 %>
					<table width="100%">
						<tr class="tableHeader">
							<th>TITLE</th>
							<th>DESCRIPTION</th>
						</tr>
						<tr><hr class="ruler"/></tr>
						<% @aboutbbs.each do |abb| %>
							<tr class="tableRowBig">
								<td width="15%"><%= abb.title %></td>
								<td width="80%"><%= abb.content %></td>
								<td width="5%"><%= link_to image_tag('edit2.png'), edit_aboutbb_path(abb), class: "edit" %></td>
							</tr>
						<% end %>
					</table>
				<% else %>
					<table width="100%"><tr class="tableRow empty"><td><em>YOU HAVE NO BOTTOM BLOCKS YET... ADD SOME BELOW ?!</em></td></tr></table>
				<% end %>
			</div>
		</div>
	</div>
	<% if @abouttbsall.count < 5 %>
	<h6><%= link_to 'Add new about top block', new_abouttb_path, :class => "darkButton2" %></h6>
	<% end %>
	<% if @aboutbbs.count < 4 %>
	<h6><%= link_to 'Add new about bottom block', new_aboutbb_path, :class => "darkButton2" %></h6>
	<% end %>
</div>