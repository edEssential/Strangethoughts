<div class="cmsWrapper">
	<div class="releases">
		<div class="divHeader">Clients</div>
		<div class="tableWrapper">
			<div class="tableContent">
				<% if @clients.count > 0 %>
					<table width="100%">
						<tr class="tableHeader">
							<th>NAME</th>
							<th>IMAGE NAME</th>
						</tr>
						<tr><hr class="ruler"/></tr>
						<% @clients.each do |c| %>
							<tr class="tableRow">
								<td width="25%"><%= c.name %></td>
								<td width="71%"><%= truncate (c.image_file_name), length: 85, :separator => '.' %></td>
								<td width="2%"><%= link_to image_tag('edit2.png'), edit_client_path(c), class: "delete" %></td>
								<td width="2%"><%= link_to image_tag('delete2.png'), c, class: "delete", :confirm => 'Are you sure you want to delete this client?', :method => :delete %></td>
							</tr>
						<% end %>
					</table>
				<% else %>
					<table width="100%"><tr class="tableRow empty"><td><em>YOU HAVE NO CLIENTS YET... ADD SOME BELOW ?!</em></td></tr></table>
				<% end %>
			</div>
		</div>
	</div>
	<h6>
	<input type="hidden" value="videos" class="modal-model-type">
	<h6><%= link_to 'Add client', new_client_path, :class => "darkButton2" %></h6>
</div>